<openerp>
    <data>
   
        <record model="ir.ui.view" id="invoice_perception_alert_form">
            <field name="name">Invoice perception alert form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <div role="alert" position="after">
                    <field name="perception_message" nolabel="1" widget="html" readonly="1"
                            attrs="{'invisible': [('perception_message', '=', '')]}"/>
                </div>
            </field>
        </record>

    </data>
</openerp>

